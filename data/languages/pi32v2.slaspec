}

#
# tbb rA
#
:tbb regA is group=0 & ins0412=0x010 & regA
{
	TODO(regA:4);
}

#
# tbh rA
#
:tbh regA is group=0 & ins0412=0x011 & regA
{
	TODO(regA:4);
}

#
# pfetch [rA]
#
:pfetch [regA] is group=0 & ins0412=0x020 & regA
{
